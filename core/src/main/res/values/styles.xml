<resources>

    <style name="RugbyRankerTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Color attributes -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant_dark</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant_dark</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <item name="colorError">@color/color_error</item>
        <item name="android:colorBackground">@color/color_background</item>
        <item name="android:statusBarColor">@color/color_status_bar</item>
        <item name="android:navigationBarColor">@color/color_navigation_bar</item>
        <!-- Type attributes -->
        <item name="android:fontFamily">@font/rajdhani</item>
        <item name="fontFamily">@font/rajdhani</item>
        <item name="textAppearanceHeadline6">@style/RugbyRankerTextAppearance.Headline6</item>
        <item name="textAppearanceButton">@style/RugbyRankerTextAppearance.Button</item>
        <!-- Shape attributes -->
        <item name="shapeAppearanceSmallComponent">@style/RugbyRankerShapeAppearance.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/RugbyRankerShapeAppearance.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/RugbyRankerShapeAppearance.LargeComponent</item>
        <!-- Widget style attributes -->
        <item name="bottomNavigationStyle">@style/RugbyRankerBottomNavigationView</item>
        <item name="textInputStyle">@style/RugbyRankerTextInputLayout</item>
        <item name="materialCardViewStyle">@style/RugbyRankerCardView</item>
        <item name="chipStyle">@style/RugbyRankerChip</item>
        <item name="android:listDivider">@drawable/list_divider</item>
        <item name="android:progressBarStyle">@style/RugbyRankerProgressBar</item>
        <item name="snackbarStyle">@style/RugbyRankerSnackbar</item>
    </style>

    <style name="RugbyRankerTheme.Secondary">
        <item name="colorPrimary">@color/color_secondary</item>
        <item name="colorPrimaryVariant">@color/color_secondary_variant_dark</item>
    </style>

    <style name="RugbyRankerTheme.Launcher">
        <item name="android:windowBackground">@drawable/bg_launcher</item>
        <item name="android:navigationBarColor">@color/color_navigation_bar_launcher</item>
    </style>

    <style name="RugbyRankerBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored" />

    <style name="RugbyRankerTextAppearance.Headline6" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/text_size_headline_6</item>
    </style>

    <style name="RugbyRankerTextAppearance.ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />

    <style name="RugbyRankerTextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RugbyRankerTextAppearance.Chip" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/rajdhani</item>
    </style>

    <style name="RugbyRankerMaterialButton.TextButton.DoublePadding" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingStart">@dimen/spacing_double</item>
        <item name="android:paddingEnd">@dimen/spacing_double</item>
    </style>

    <style name="RugbyRankerChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textAppearance">@style/RugbyRankerTextAppearance.Chip</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="chipBackgroundColor">?attr/colorSecondary</item>
        <item name="rippleColor">?attr/colorOnSecondary</item>
        <item name="closeIconTint">?attr/colorOnSecondary</item>
        <item name="chipIconTint">?attr/colorOnSecondary</item>
    </style>

    <style name="RugbyRankerTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <style name="RugbyRankerCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/elevation_card_view</item>
        <item name="cardBackgroundColor">@color/light_grey</item>
        <item name="strokeWidth">@dimen/size_border</item>
        <item name="strokeColor">@color/color_border</item>
    </style>
    
    <style name="RugbyRankerProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/color_progress_bar</item>
    </style>

    <style name="RugbyRankerWorldRugbyMatchDateItemDecoration">
        <item name="android:width">@dimen/width_world_rugby_match_date_header</item>
        <item name="android:paddingTop">@dimen/spacing_standard</item>
        <item name="android:paddingStart">@dimen/padding_start_world_rugby_match_date_header</item>
        <item name="android:paddingEnd">@dimen/padding_end_world_rugby_match_date_header</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/rajdhani</item>
        <item name="datePaddingTop">@dimen/spacing_double</item>
        <item name="dayMonthTextSize">@dimen/text_size_world_rugby_match_date_header_day_month</item>
        <item name="yearTextSize">@dimen/text_size_world_rugby_match_date_header_year</item>
    </style>

    <style name="RugbyRankerWorldRugbyMatchSpaceItemDecoration">
        <item name="android:paddingTop">@dimen/spacing_standard</item>
        <item name="paddingHorizontal">@dimen/padding_horizontal_world_rugby_match_space</item>
    </style>

    <style name="RugbyRankerSnackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="animationMode">slide</item>
    </style>

    <style name="RugbyRankerShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/size_corner</item>
    </style>

    <style name="RugbyRankerShapeAppearance.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/size_corner</item>
    </style>

    <style name="RugbyRankerShapeAppearance.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/size_corner</item>
    </style>

</resources>
