<resources>

    <style name="Widget.RugbyRanker.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored" />

    <style name="Widget.RugbyRanker.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Surface" />

    <style name="Widget.RugbyRanker.Button.TextButton.DoublePadding" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingStart">@dimen/spacing_double</item>
        <item name="android:paddingEnd">@dimen/spacing_double</item>
    </style>

    <style name="Widget.RugbyRanker.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textAppearance">@style/TextAppearance.RugbyRanker.Chip</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="chipBackgroundColor">?attr/colorSecondary</item>
        <item name="rippleColor">?attr/colorOnSecondary</item>
        <item name="closeIconTint">?attr/colorOnSecondary</item>
        <item name="chipIconTint">?attr/colorOnSecondary</item>
    </style>

    <style name="Widget.RugbyRanker.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <style name="Widget.RugbyRanker.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/elevation_card_view</item>
        <item name="cardBackgroundColor">@color/color_fill</item>
        <item name="strokeWidth">@dimen/size_stroke</item>
        <item name="strokeColor">@color/color_stroke</item>
    </style>
    
    <style name="Widget.RugbyRanker.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminate">true</item>
    </style>

    <style name="Widget.RugbyRanker.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="animationMode">slide</item>
    </style>

    <style name="Widget.RugbyRanker.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="android:elevation">@dimen/elevation_bottom_sheet</item>
    </style>

    <style name="ItemDecoration.RugbyRanker.WorldRugbyMatch.Date" parent="">
        <item name="android:width">@dimen/width_world_rugby_match_date_header</item>
        <item name="android:paddingTop">@dimen/spacing_standard</item>
        <item name="android:paddingStart">@dimen/padding_start_world_rugby_match_date_header</item>
        <item name="android:paddingEnd">@dimen/padding_end_world_rugby_match_date_header</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/rajdhani</item>
        <item name="datePaddingTop">@dimen/spacing_double</item>
        <item name="dayMonthTextSize">@dimen/text_size_world_rugby_match_date_header_day_month</item>
        <item name="yearTextSize">@dimen/text_size_world_rugby_match_date_header_year</item>
    </style>

    <style name="ItemDecoration.RugbyRanker.WorldRugbyMatch.Space" parent="">
        <item name="android:paddingTop">@dimen/spacing_standard</item>
        <item name="paddingHorizontal">@dimen/padding_horizontal_world_rugby_match_space</item>
    </style>

</resources>
