<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ricknout.worldrugbyranker">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/WorldRugbyRankerTheme"
        android:name=".WorldRugbyRankerApplication">

        <activity
            android:name=".LauncherActivity"
            android:theme="@style/WorldRugbyRankerTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity">
            <nav-graph android:value="@navigation/nav_graph_main" />
        </activity>

    </application>

</manifest>
