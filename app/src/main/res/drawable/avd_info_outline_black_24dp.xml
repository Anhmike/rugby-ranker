<?xml version="1.0" encoding="utf-8"?>
<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:drawable="@drawable/ic_info_outline_black_24dp">

    <target android:name="dot">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="200"
                android:startOffset="0"
                android:propertyName="trimPathStart"
                android:valueFrom="0"
                android:valueTo="1" />
        </aapt:attr>
    </target>

    <target android:name="line">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="200"
                android:startOffset="200"
                android:propertyName="trimPathStart"
                android:valueFrom="0"
                android:valueTo="1" />
        </aapt:attr>
    </target>

    <target android:name="circleGroup">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:duration="200"
                    android:startOffset="400"
                    android:propertyName="scaleX"
                    android:valueFrom="1"
                    android:valueTo="0.56" />
                <objectAnimator
                    android:duration="200"
                    android:startOffset="400"
                    android:propertyName="scaleY"
                    android:valueFrom="1"
                    android:valueTo="0.56" />
            </set>
        </aapt:attr>
    </target>

    <target android:name="circle">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="200"
                android:startOffset="400"
                android:propertyName="strokeWidth"
                android:valueFrom="2"
                android:valueTo="3.6" />
        </aapt:attr>
    </target>

    <target android:name="circle">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="200"
                android:startOffset="600"
                android:propertyName="strokeWidth"
                android:valueFrom="3.6"
                android:valueTo="2" />
        </aapt:attr>
    </target>

    <target android:name="circleGroup">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:duration="200"
                    android:startOffset="600"
                    android:propertyName="scaleX"
                    android:valueFrom="0.56"
                    android:valueTo="1" />
                <objectAnimator
                    android:duration="200"
                    android:startOffset="600"
                    android:propertyName="scaleY"
                    android:valueFrom="0.56"
                    android:valueTo="1" />
            </set>
        </aapt:attr>
    </target>

    <target android:name="line">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="200"
                android:startOffset="800"
                android:propertyName="trimPathStart"
                android:valueFrom="1"
                android:valueTo="0" />
        </aapt:attr>
    </target>

    <target android:name="dot">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="200"
                android:startOffset="1000"
                android:propertyName="trimPathStart"
                android:valueFrom="1"
                android:valueTo="0" />
        </aapt:attr>
    </target>

</animated-vector>
