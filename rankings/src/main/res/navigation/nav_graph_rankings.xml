<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rankingsNavGraph"
    app:startDestination="@id/mensRankingsFragment"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/mensRankingsFragment"
        android:name="com.ricknout.rugbyranker.rankings.ui.RankingsFragment"
        android:label="MensRankingsFragment"
        tools:layout="@layout/fragment_rankings">
        <argument android:name="sport" android:defaultValue="MENS" app:argType="com.ricknout.rugbyranker.core.vo.Sport" />
    </fragment>

    <fragment
        android:id="@+id/womensRankingsFragment"
        android:name="com.ricknout.rugbyranker.rankings.ui.RankingsFragment"
        android:label="WomensRankingsFragment"
        tools:layout="@layout/fragment_rankings">
        <argument android:name="sport" android:defaultValue="WOMENS" app:argType="com.ricknout.rugbyranker.core.vo.Sport" />
    </fragment>

    <action
        android:id="@+id/rankingsFragmentAction">
        <argument android:name="sport" app:argType="com.ricknout.rugbyranker.core.vo.Sport" />
    </action>

</navigation>
